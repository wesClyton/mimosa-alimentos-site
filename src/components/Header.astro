---
import type { IHeaderMenu } from '@interfaces/header.interface';
import Menu from './Menu.astro';
import Social from './Social.astro';

const { menuItems, menuSejaCliente }: IHeaderMenu = Astro.props;

const colors = {
  bg: menuSejaCliente ? 'bg-yellow-300' : 'bg-red-800',
  bgLg: menuSejaCliente ? 'lg:bg-yellow-300' : 'lg:bg-red-800',
  iconSocial: menuSejaCliente ? 'red' : 'yellow',
};
---

<header class={`${colors.bg} p-5 lg:bg-transparent relative z-50`}>
  <button
    id="header-toggle-btn"
    class="absolute top-8 right-6 z-10 w-7 cursor-pointer lg:hidden"
    aria-label="Header Button Toggle"
  >
    <img src={`/hamburger-menu-${menuSejaCliente ? 'red' : 'white'}.svg`} alt="Header Button Toggle" />
  </button>

  <div class="container-center">
    <div
      class={`flex flex-col items-center justify-center rounded-3xl lg:w-full lg:flex-row lg:justify-between lg:px-8 lg:py-7 ${colors.bgLg}`}
    >
      <a href="/">
        <img class="w-38" src={`/logo-mimosa-${menuSejaCliente ? 'red' : 'white'}.svg`} alt="Logo Mimosa Alimentos" />
      </a>

      <div class="header-toggle-content hidden lg:block">
        <Menu items={menuItems} menuSejaCliente={menuSejaCliente} />
      </div>

      <div class="header-toggle-content hidden lg:block">
        <Social iconColor={colors.iconSocial} />
      </div>
    </div>
  </div>
</header>

<script is:inline>
  function checkIsMobile() {
    return window.innerWidth <= 1024;
  }

  let contents = [];
  const isMobile = checkIsMobile();
  let isOpen = isMobile;

  document.addEventListener('DOMContentLoaded', () => {
    initializeToggleContent();
    initializeSmoothScroll();
  });

  function initializeToggleContent() {
    const btn = document.getElementById('header-toggle-btn');
    contents = document.getElementsByClassName('header-toggle-content');

    shouldShowMenu();

    btn.addEventListener('click', () => {
      shouldShowMenu();
    });
  }

  function shouldShowMenu() {
    isOpen = !isOpen;

    for (const content of contents) {
      if (isOpen) {
        content.classList.add(['block']);
        content.classList.remove('hidden');
      } else {
        for (const content of contents) {
          content.classList.remove('block');
          content.classList.add('hidden');
        }
      }
    }
  }

  function initializeSmoothScroll() {
    document.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', function (e) {
        const targetId = this.getAttribute('href').split('#')[1];
        const target = document.getElementById(targetId);
        if (target) {
          e.preventDefault();
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  }
</script>
