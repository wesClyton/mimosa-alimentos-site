---
import type { IHeaderMenu } from '@interfaces/header.interface';
import Menu from './Menu.astro';
import Social from './Social.astro';

const { menuItems, menuSejaCliente }: IHeaderMenu = Astro.props;

const colors = {
  bg: menuSejaCliente ? 'yellow-300' : 'red-800',
  iconSocial: menuSejaCliente ? 'red' : 'yellow',
};
---

<header class={`bg-${colors.bg} p-5 lg:bg-transparent relative z-50`}>
  <button
    id="header-toggle-btn"
    class="absolute top-2 right-2 z-10 w-7 cursor-pointer lg:hidden"
    aria-label="Header Button Toggle"
  >
    <img src={`/hamburger-menu-${menuSejaCliente ? 'red' : 'white'}.svg`} alt="Header Button Toggle" />
  </button>

  <div class="container-center">
    <div
      class={`flex flex-col items-center justify-center rounded-3xl lg:w-full lg:flex-row lg:justify-between lg:px-8 lg:py-7 lg:bg-${colors.bg}`}
    >
      <a href="/">
        <img class="w-38" src={`/logo-mimosa-${menuSejaCliente ? 'red' : 'white'}.svg`} alt="Logo Mimosa Alimentos" />
      </a>

      <div class="header-toggle-content hidden lg:block">
        <Menu items={menuItems} menuSejaCliente={menuSejaCliente} />
      </div>

      <div class="header-toggle-content hidden lg:block">
        <Social iconColor={colors.iconSocial} />
      </div>
    </div>
  </div>
</header>

<script is:inline>
  function checkIsMobile() {
    return window.innerWidth <= 1024;
  }

  let contents = [];
  const isMobile = checkIsMobile();
  let isOpen = isMobile;

  document.addEventListener('DOMContentLoaded', () => {
    initializeToggleContent();
  });

  function initializeToggleContent() {
    const btn = document.getElementById('header-toggle-btn');
    contents = document.getElementsByClassName('header-toggle-content');

    shouldShowMenu();

    btn.addEventListener('click', () => {
      shouldShowMenu();
    });
  }

  function shouldShowMenu() {
    isOpen = !isOpen;

    for (const content of contents) {
      if (isOpen) {
        content.classList.add(['block']);
        content.classList.remove('hidden');
      } else {
        for (const content of contents) {
          content.classList.remove('block');
          content.classList.add('hidden');
        }
      }
    }
  }
</script>
