---
import CardCaminhao from '@components/CardCaminhao';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import { Title } from '@components/Title';
import Layout from '@layouts/Layout.astro';
import { MENU_ITEMS } from '@utils/menu.contants';
---

<Layout
  title="Onde Encontrar | Mimosa Alimentos | Localize Nossos Produtos"
  description="Descubra os pontos de venda mais próximos de você. Produtos Mimosa Alimentos estão disponíveis em mercados, supermercados e estabelecimentos em todo o Paraná."
>
  <Header />

  <main class="container-center px-5 py-10 md:pb-20">
    <Title
      title="Onde encontrar"
      breadcrumbs={[
        {
          label: MENU_ITEMS.home.label,
          href: MENU_ITEMS.home.href,
        },
        {
          label: MENU_ITEMS.ondeEncontrar.label,
          href: MENU_ITEMS.ondeEncontrar.href,
        },
      ]}
    />

    <div class="mt-10 md:mt-15">
      <CardCaminhao client:only showMap={true} />
    </div>
  </main>

  <Footer />
</Layout>
