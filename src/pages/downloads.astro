---
import DownloadTabs from '@components/DownloadTabs';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import { Title } from '@components/Title';
import Layout from '@layouts/Layout.astro';
import { MENU_ITEMS } from '@utils/menu.contants';
---

<Layout>
  <Header />

  <main class="container-center px-5 py-10 md:pb-20">
    <Title
      title="Downloads"
      breadcrumbs={[
        {
          label: MENU_ITEMS.home.label,
          href: MENU_ITEMS.home.href,
        },
        {
          label: MENU_ITEMS.downloads.label,
          href: MENU_ITEMS.downloads.href,
        },
      ]}
    />
    <p class="paragraph mx-auto max-w-100 text-center md:mt-3">
      Aproveite nossos materiais de divulgação. <br /> Faça o download de nossas imagens de produtos e logos.
    </p>

    <DownloadTabs client:load />
  </main>

  <Footer />
</Layout>
