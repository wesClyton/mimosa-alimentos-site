---
import CardCaminhao from '@components/CardCaminhao';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import Layout from '@layouts/Layout.astro';
import { MENU_ITEMS } from '@utils/menu.contants';
---

<Layout>
  <Header
    menuItems={[
      {
        label: MENU_ITEMS.institucional.label,
        href: MENU_ITEMS.institucional.href,
      },
      {
        label: MENU_ITEMS.produtos.label,
        href: MENU_ITEMS.produtos.href,
      },
      {
        label: MENU_ITEMS.ondeEncontrar.label,
        href: MENU_ITEMS.ondeEncontrar.href,
      },
      {
        label: MENU_ITEMS.contato.label,
        href: MENU_ITEMS.contato.href,
      },
    ]}
  />

  <section class="container-center px-5 pt-10">
    <div class="flex flex-col gap-5 md:flex-row md:items-center">
      <div class="flex-1/2">
        <h1 class="title">Não dá para explicar, tem que experimentar</h1>
        <h2 class="subtitle mt-2 lg:mt-5">Sabor, qualidade, suculência e tudo que você procura</h2>
      </div>

      <div class="flex-1/3">
        <img src="/home/banner-01.png" alt="Não dá para explicar, tem que experimentar" />
      </div>
    </div>
  </section>

  <section class="mt-26 flex flex-col bg-yellow-300 px-5 py-10 lg:pb-0">
    <div class="container-center">
      <div class="flex flex-row items-center gap-15 md:gap-32 lg:gap-40">
        <div class="relative flex-1/2">
          <img
            class="-mt-22 mb-5 max-w-70 md:max-w-90 lg:absolute lg:-top-33 xl:-top-38 2xl:-top-60 2xl:max-w-140"
            src="/home/coracao.png"
            alt="Mimosa Alimentos"
          />
          <div>
            <h1 class="title">Tudo fica mais gostoso com os alimentos Mimosa!</h1>
            <a class="btn --red mt-5 inline-block w-full lg:w-100" href={MENU_ITEMS.sejaUmCliente.href}
              >Torne-se um cliente Mimosa</a
            >
          </div>
        </div>
        <div class="hidden flex-1/3 md:pt-10 lg:block">
          <img src="/home/linguica-espeto.png" alt="Linguiça no Espeto" />
        </div>
      </div>
    </div>
  </section>

  <section class="container-center px-5">
    <div class="flex flex-col gap-12 py-10 md:gap-16 lg:py-20">
      <div class="flex flex-col items-center gap-7 md:flex-row md:gap-12">
        <div class="flex-1/2">
          <h1 class="title">Mimosa Alimentos</h1>
          <h2 class="subtitle lg:mt-2">Uma história de amor e dedicação!</h2>

          <a class="btn --red mt-5 inline-block w-full lg:w-100" href={MENU_ITEMS.institucional.href}
            >Conheça nossa história</a
          >
        </div>
        <div class="flex-2/3">
          <img
            class="w-full"
            src="/home/mimosa-alimentos-01.png"
            alt="Mimosa Alimentos - Uma história de amor e dedicação!"
          />
        </div>
      </div>

      <div class="flex flex-col-reverse items-center gap-7 md:flex-row md:gap-12">
        <div class="flex-2/3">
          <img
            class="w-full"
            src="/home/mimosa-alimentos-02.png"
            alt="Leve a qualidade dos produtos mimosa até você!"
          />
        </div>

        <div class="flex-1/2">
          <h1 class="title">Leve a qualidade</h1>
          <h2 class="subtitle lg:mt-2">dos produtos mimosa até você!</h2>

          <a class="btn --red mt-5 inline-block w-full lg:w-100" href={MENU_ITEMS.contato.href}>Agendar visita</a>
        </div>
      </div>
    </div>
  </section>

  <section class="relative flex flex-col bg-red-800 px-5 py-16 lg:py-32 xl:py-46 2xl:py-62">
    <div
      class="absolute inset-0 top-0 z-1 h-full w-full bg-[url(/home/bg-torne-se-cliente.png)] bg-cover bg-top bg-no-repeat opacity-30"
    >
    </div>

    <div class="container-center z-2">
      <div class="flex flex-col items-center gap-8 py-10 text-sm md:flex-row md:gap-32 lg:gap-40 xl:text-xl">
        <p class="flex-1/2 text-right text-yellow-300">
          Da nossa <span class="font-bold text-white">família</span> para a <span class="font-bold text-white">sua</span
          >, com sabor, qualidade e dedicação que fazem parte da nossa história.
        </p>
        <a class="btn --yellow inline-block w-full flex-1/2" href={MENU_ITEMS.sejaUmCliente.href}
          >Torne-se um cliente Mimosa</a
        >
      </div>
    </div>
  </section>

  <section class="relative flex items-center justify-center bg-black px-5 py-10 md:py-20 lg:py-32">
    <video class="absolute inset-0 z-0 h-full w-full object-cover opacity-30" autoplay muted loop playsinline>
      <source src="/home/video-encontre-fornecedores.mp4" type="video/mp4" />
      Seu navegador não suporta vídeos em HTML5.
    </video>

    <div class="container-center">
      <div class="relative z-10 w-full">
        <CardCaminhao showMap={false} />
      </div>
    </div>
  </section>

  <Footer />
</Layout>
