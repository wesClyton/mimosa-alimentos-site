---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout>
  <Header />

  <section class="container-center">
    <div class="my-10 flex flex-col gap-5 md:flex-row md:items-center">
      <div class="flex-1/2">
        <h1 class="title">Não dá para explicar, tem que experimentar</h1>
        <h2 class="subtitle mt-2 lg:mt-5">Sabor, qualidade, suculência e tudo que você procura</h2>
      </div>

      <div class="flex-1/3">
        <img src="/home/banner-01.png" alt="Não dá para explicar, tem que experimentar" />
      </div>
    </div>
  </section>

  <section class="mt-30 flex flex-col bg-yellow-500 py-10 lg:p-0">
    <div class="container-center">
      <div class="flex flex-row items-center gap-15 md:gap-32 lg:gap-40">
        <div class="relative flex-1/2">
          <img
            class="-mt-22 mb-5 max-w-70 md:max-w-90 lg:absolute lg:-top-23 xl:-top-28 2xl:-top-44"
            src="/home/coracao.png"
            alt="Mimosa Alimentos"
          />

          <div>
            <h1 class="title">Tudo fica mais gostoso com os alimentos Mimosa!</h1>
            <a class="btn --red mt-5 inline-block w-full lg:w-100" href="#">Torne-se um cliente Mimosa</a>
          </div>
        </div>
        <div class="hidden flex-1/3 md:pt-10 lg:block">
          <img src="/home/linguica-espeto.png" alt="Linguiça no Espeto" />
        </div>
      </div>
    </div>
  </section>

  <section class="flex flex-col py-10 lg:py-20">
    <div class="container-center">
      <div class="flex flex-col gap-12 md:gap-16">
        <div class="flex flex-col items-center gap-7 md:flex-row md:gap-12">
          <div class="flex-1/2">
            <h1 class="title">Mimosa Alimentos</h1>
            <h2 class="subtitle mb-5">Uma história de amor e dedicação!</h2>

            <a class="btn --red inline-block w-full lg:w-100" href="#">Conheça nossa história</a>
          </div>
          <div class="w-100 flex-2/3">
            <img src="/home/mimosa-alimentos-01.png" alt="Mimosa Alimentos" />
          </div>
        </div>

        <div class="flex flex-col-reverse items-center gap-7 md:flex-row md:gap-12">
          <div class="w-100 flex-2/3">
            <img src="/home/mimosa-alimentos-02.png" alt="Leve a qualidade" />
          </div>

          <div class="flex-1/2">
            <h1 class="title">Mimosa Alimentos</h1>
            <h2 class="subtitle">Uma história de amor e dedicação!</h2>

            <a class="btn --red mt-5 inline-block w-full lg:w-100" href="#">Agendar visita</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
